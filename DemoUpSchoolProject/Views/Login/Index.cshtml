
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login 09</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Templates/login-form-19/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Giriş Sayfası</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center">
                            <img src="~/Templates/login-form-19/login-form-19/images/bg.jpg" style="width:100px;height:100px;"/>
                        </div>
                       
                        <h3 class="text-center mb-0">Hoşgeldiniz!</h3>
                        <p class="text-center">Aşağıdaki bilgileri girerek sisteme giriş yapabilirsiniz.</p>
                        <form action="#" class="login-form" method="post">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="MemberMail" placeholder="Mail Adresi" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="MemberPassword" placeholder="Şifre" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="w-100 text-center mt-4 text">
                            <p class="mb-0">Henüz bir hesabın yok mu?</p>
                            <a href="/Register/SignUp">Hemen Kaydol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Templates/login-form-19/login-form-19/js/jquery.min.js"></script>
    <script src="~/Templates/login-form-19/login-form-19/js/popper.js"></script>
    <script src="~/Templates/login-form-19/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/Templates/login-form-19/login-form-19/js/main.js"></script>

</body>
</html>


