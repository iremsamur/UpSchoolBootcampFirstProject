@using DemoUpSchoolProject.Models.Entities
@model List<TblLatestWorks>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}
<h2>Deneyimlerim</h2>
@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        Kayıt Bulunamadı!!
    </div>
    <br />
}
else
{
    <!--üste eklenen model ile controllers values'dan gelen değerler karşılanır.-->
    <table class="table table-bordered">
        <!--Önce aracın türü sonra biçimlendirme formatı şeklinde bootstrap verilir.
        türü table, table-bordered ise format şekli -->
        <tr>

            <th>#</th>
            <th>Proje Resimi</th>
            <th>Proje Adı</th>
            <th>Proje Tipi</th>
            <th>Açıklaması</th>
            <th>Tarihi</th>
            <th>Github Linki</th>



            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        <!--razor syntax-->
        @foreach (var item in Model)
        {
            sayac += 1;
            <tr>

                <td>@sayac</td>
                <td>
                    <img src="@item.ProjectImage" class="img-fluid img-thumbnail" alt="@item.ProjectImage">
                </td>
                <td>@item.ProjectTitle</td>
                <td>@item.ProjectType</td>
                <td>@item.ProjectDescription</td>
                <td>@item.ProjectDate</td>
                <td>@item.GithubLink</td>


                <td><a href="/Projects/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Projects/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>


            </tr>

        }


    </table>


}
<a href="/Projects/AddProject" class="btn btn-primary">Yeni Proje Ekle</a>



