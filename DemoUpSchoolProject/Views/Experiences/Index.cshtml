@using DemoUpSchoolProject.Models.Entities
@model List<TblExperiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}
<h2>Deneyimlerim</h2>
@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        Kayıt Bulunamadı!!
    </div>
    <br />
}
else
{
    <!--üste eklenen model ile controllers values'dan gelen değerler karşılanır.-->
    <table class="table table-bordered">
        <!--Önce aracın türü sonra biçimlendirme formatı şeklinde bootstrap verilir.
        türü table, table-bordered ise format şekli -->
        <tr>

            <th>#</th>
            <th>Şirket Logosu</th>
            <th>Profesyonellik Alanı</th>
            <th>Çalıştığı Şirket Adı</th>
            <th>Çalışma Süresi</th>
            <th>Açıklama</th>


            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        <!--razor syntax-->
        @foreach (var item in Model)
        {
            sayac += 1;
    <tr>

        <td>@sayac</td>
        <td>
            <img src="@item.CompanyLogo" class="img-fluid img-thumbnail" alt="@item.CompanyName"></td>
        <td>@item.JobTitle</td>
        <td>@item.CompanyName</td>
        <td>@item.Duration</td>
        <td>@item.Description</td>


        <td><a href="/Experiences/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Experiences/UpdateExperience/@item.ExperienceID" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Experiences/ShowDetailExperience/@item.ExperienceID" class="btn btn-warning">Detay</a></td>

    </tr>

        }


    </table>

}




