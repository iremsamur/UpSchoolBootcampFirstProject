@using DemoUpSchoolProject.Models.Entities
@model List<TblHobby>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<h2>Hobilerim</h2>
@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        Kayıt Bulunamadı!!
    </div>
    <br />
}
else
{
    <!--üste eklenen model ile controllers values'dan gelen değerler karşılanır.-->
    <table class="table table-bordered">
        <!--Önce aracın türü sonra biçimlendirme formatı şeklinde bootstrap verilir.
        türü table, table-bordered ise format şekli -->
        <tr>

            <th>#</th>
            <th>Hobi Resim</th>
            <th>Hobi Adı</th>
    


            <th>Sil</th>
            <th>Güncelle</th>
        
        </tr>
        <!--razor syntax-->
        @foreach (var item in Model)
        {
            count += 1;
            <tr>

                <td>@count</td>
                <td>
                    <img src="@item.ImageUrl" class="img-fluid img-thumbnail" alt="@item.HobbyName">
                </td>
                <td>@item.HobbyName</td>
             


                <td><a href="/Hobby/DeleteHobby/@item.HobbyID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Hobby/UpdateHobby/@item.HobbyID" class="btn btn-success">Güncelle</a></td>
               

            </tr>

        }


    </table>


}
<a href="/Hobby/AddHobby" class="btn btn-primary">Yeni Hobi Ekle</a>
